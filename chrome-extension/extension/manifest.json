{
  "manifest_version": 3,
  "name": "AssistantQ",
  "version": "1.0.0",
  "description": "AI-powered productivity assistant for smart content generation with 4 core features",
  
  "permissions": [
    "activeTab",
    "scripting"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://news.ycombinator.com/*",
        "https://medium.com/*",
        "https://dev.to/*",
        "https://stackoverflow.com/*",
        "https://github.com/*",
        "https://docs.aws.amazon.com/*",
        "https://www.nytimes.com/*",
        "https://techcrunch.com/*",
        "https://www.reddit.com/*",
        "https://en.wikipedia.org/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["assistantq-character.png"],
      "matches": [
        "https://news.ycombinator.com/*",
        "https://medium.com/*",
        "https://dev.to/*",
        "https://stackoverflow.com/*",
        "https://github.com/*",
        "https://docs.aws.amazon.com/*",
        "https://www.nytimes.com/*",
        "https://techcrunch.com/*",
        "https://www.reddit.com/*",
        "https://en.wikipedia.org/*"
      ]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AssistantQ - AI Assistant",
    "default_icon": {
      "16": "assistantq-character.png",
      "48": "assistantq-character.png",
      "128": "assistantq-character.png"
    }
  },
  
  "icons": {
    "16": "assistantq-character.png",
    "48": "assistantq-character.png",
    "128": "assistantq-character.png"
  },
  
  "host_permissions": [
    "https://*.execute-api.us-east-1.amazonaws.com/*"
  ]
}
